---
import Layout from '../layouts/Layout.astro';
import { getAuthFromRequest } from '../utils/session';

// Check authentication status
const { isAuthenticated } = await getAuthFromRequest(Astro.request);

// Redirect to dashboard if already authenticated
if (isAuthenticated) {
  return Astro.redirect('/dashboard');
}
---

<Layout title="Astro with SQLite and Drizzle">
	<main>
		<div class="container">
			<div class="header">
				<h1>Astro with SQLite and Drizzle</h1>
			</div>
			
			<div class="login-container">
				<div class="welcome-section">
					<h2>Welcome to our Application</h2>
					<p>Submit and manage your information with our easy-to-use platform.</p>
					<div class="features">
						<div class="feature">
							<div class="feature-icon">ðŸ”’</div>
							<h3>Secure Authentication</h3>
							<p>Role-based access control with secure login.</p>
						</div>
						<div class="feature">
							<div class="feature-icon">ðŸ“Š</div>
							<h3>Data Management</h3>
							<p>Easily submit and track your information.</p>
						</div>
						<div class="feature">
							<div class="feature-icon">ðŸš€</div>
							<h3>Fast Performance</h3>
							<p>Built with Astro SSR for optimal speed.</p>
						</div>
					</div>
				</div>
				
				<div class="auth-section">
					<div class="auth-card">
						<h2>Get Started</h2>
